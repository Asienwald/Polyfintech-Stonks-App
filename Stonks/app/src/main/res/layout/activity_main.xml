<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:text="@string/dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dashboard_items"
                    android:textColor="#00BCD4"
                    android:textSize="20sp" />

            </LinearLayout>

            <ImageView
                android:src="@drawable/stonks"
                android:layout_width="80dp"
                android:layout_height="80dp" />

        </LinearLayout>

        <GridLayout
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:orientation="horizontal"
            android:columnCount="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_transfer"
                style="@style/CardStyle">

                <LinearLayout
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

<!--                    <ImageView-->
<!--                        android:layout_width="80dp"-->
<!--                        android:layout_height="80dp"-->
<!--                        android:src="@drawable/transfer"-->
<!--                        app:srcCompat="@drawable/transfer" />-->

                    <com.airbnb.lottie.LottieAnimationView
                        style="@style/OnAnimations"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:lottie_autoPlay="true"
                        android:layout_gravity="center"
                        app:lottie_fileName="8434-nfc-payment.json" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transfer"
                        android:textSize="25sp" />

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_loan"
                style="@style/CardStyle">

                <LinearLayout
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:lottie_autoPlay="true"
                        android:layout_gravity="center"
                        app:lottie_fileName="7337-credit-card-check-animation.json"
                        style="@style/OnAnimations"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loan"
                        android:textSize="25sp" />

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_invest"
                style="@style/CardStyle">

                <LinearLayout
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:lottie_autoPlay="true"
                        android:layout_gravity="center"
                        app:lottie_fileName="9072-coin.json"
                        style="@style/OnAnimations"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Invest"
                        android:textSize="25sp" />

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_manage"
                style="@style/CardStyle">

                <LinearLayout
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:lottie_autoPlay="true"
                        android:layout_gravity="center"
                        app:lottie_fileName="5064-safe-and-sound.json"
                        style="@style/OnAnimations" />

                    <TextView
                        android:textSize="25sp"
                        android:text="Manage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_budget"
                style="@style/CardStyle">

                <LinearLayout
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:lottie_autoPlay="true"
                        android:layout_gravity="center"
                        app:lottie_fileName="4967-onboarding-piggy-bank.json"
                        style="@style/OnAnimations"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Budget"
                        android:textSize="25sp" />

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_analyse"
                style="@style/CardStyle">

                <LinearLayout
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:lottie_autoPlay="true"
                        android:layout_gravity="center"
                        app:lottie_fileName="16420-convert.json"
                        style="@style/OnAnimations"/>

                    <TextView
                        android:textSize="25sp"
                        android:text="Analyse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_incentives"
                style="@style/CardStyle">

                <LinearLayout
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:lottie_autoPlay="true"
                        android:layout_gravity="center"
                        app:lottie_fileName="4661-logistic-coupon-json-animation.json"
                        style="@style/OnAnimations"/>

                    <TextView
                        android:textSize="21sp"
                        android:text="Incentives"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_settings"
                style="@style/CardStyle">

                <LinearLayout
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:lottie_autoPlay="true"
                        android:layout_gravity="center"
                        app:lottie_fileName="7208-gears-animation.json"
                        style="@style/OnAnimations"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:textSize="25sp" />

                </LinearLayout>



            </androidx.cardview.widget.CardView>


        </GridLayout>

    </LinearLayout>





</ScrollView>